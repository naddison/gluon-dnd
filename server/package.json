    "eslint-loader": "~1.9.0",
    "eslint-plugin-promise": "~3.5.0",
    "rimraf": "~2.6.1"
  },
  "dependencies": {
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
